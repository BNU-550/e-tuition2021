@page
@model e_tuition2021.Pages.Lessons.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lesson.TimeSlotId" class="control-label"></label>
                <select asp-for="Lesson.TimeSlotId" class ="form-control" asp-items="ViewBag.TimeSlotId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.StudentId" class="control-label"></label>
                <select asp-for="Lesson.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.StartDate" class="control-label"></label>
                <input asp-for="Lesson.StartDate" class="form-control" />
                <span asp-validation-for="Lesson.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.NoRepeat" class="control-label"></label>
                <input asp-for="Lesson.NoRepeat" class="form-control" />
                <span asp-validation-for="Lesson.NoRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.KeyStage" class="control-label"></label>
                <input asp-for="Lesson.KeyStage" class="form-control" />
                <span asp-validation-for="Lesson.KeyStage" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Lesson.FaceToFace" /> @Html.DisplayNameFor(model => model.Lesson.FaceToFace)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Lesson.Online" /> @Html.DisplayNameFor(model => model.Lesson.Online)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
