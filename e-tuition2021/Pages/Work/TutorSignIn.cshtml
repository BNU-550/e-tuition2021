@page
@using e_tuition2021.Models
@model e_tuition2021.Pages.TutorSignInModel
@{
      ViewData["Title"] = "Tutor account";
}

<!--Tutor Sign In-->

<header class="jumbotron">
    <h1 >Tutor Login</h1>
    <h2 >@Model.Message</h2>
</header> 
<section>
    <div class="row">
        <div class="col-4">
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Tutor.FirstName"></label>
                    <input class="form-control" 
                        asp-for="Tutor.FirstName"
                        placeholder="Enter your first name" />
                    <span asp-validation-for="Tutor.FirstName" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tutor.LastName"></label>
                    <input class="form-control" asp-for="Tutor.LastName" 
                        placeholder="Enter your last name" />
                    <span asp-validation-for="Tutor.LastName" class="alert-danger"></span>
                </div>
                <p class="form-group">
                    <label asp-for="Tutor.Degree"></label>
                    <input class="form-control"  asp-for="Tutor.Degree" 
                        placeholder="BSc (Hons) Computing" />
                    <span asp-validation-for="Tutor.Degree" class="alert-danger"></span>
                </p>
            <p>
                <button class="btn btn-success" type="submit" >
                    Login
                </button>
            </p>
            </form>

            <p class="col-sm-12">
                @ViewData["Message"]
            </p>
        </div>
    </div>
</section>

