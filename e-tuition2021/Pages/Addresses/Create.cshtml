@page
@model e_tuition2021.Pages.Addresses.CreateModel

@{
    ViewData["Title"] = "Add Address";
}
<header class=jumbotron>
    <h1>Add New Address</h1>
</header>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Person.PersonId" />
            <input type="hidden" asp-for="Person.FirstName" />
            <input type="hidden" asp-for="Person.LastName" />
            <input type="hidden" asp-for="Person.MobileNumber" />
            <input type="hidden" asp-for="Person.Email" />
            
            <div class="form-group">
                <label asp-for="Address.HouseNumber" class="control-label"></label>
                <input asp-for="Address.HouseNumber" class="form-control" />
                <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostCode" class="control-label"></label>
                <input asp-for="Address.PostCode" class="form-control" />
                <span asp-validation-for="Address.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-page="@ReturnPage.Name">&lt;&lt; Back</a>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
