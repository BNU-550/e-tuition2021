@page
@model e_tuition2021.Pages.Tutors.IndexModel

@{
    ViewData["Title"] = "Tutors";
}

<h1>Tutors</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].DbsCheck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].PGCE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tutor[0].MobileNumber)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tutor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DbsCheck)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PGCE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.HouseNumber)
            </td>
            <td>
                <div>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.PersonId">Edit</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.PersonId">Details</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.PersonId">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

