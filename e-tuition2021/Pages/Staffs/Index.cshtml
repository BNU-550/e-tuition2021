@page
@model e_tuition2021.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Staff";
}

<h1>Staff Members</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].MobileNumber)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.HouseNumber)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.PersonId">Edit</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.PersonId">Details</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.PersonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
